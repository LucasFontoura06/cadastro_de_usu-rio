users = {}
status = ""

# Are you a registered user?

def displayMenu():
  status = input("Are you a registered user? y/n? Press q to quite. ")
  if status == "y":
    oldUser()
  elif status == "n":
    newUser()

# New User.

def newUser():
  createLogin = input("Creat login name: ")

  if createLogin in users:
    print("\nLogin name already existe!\n")
  else:
    createPassw = input("Created Password: ")
    users[createLogin] = createPassw
    print("\nUser created\n")

# Old User.

def oldUser():
  login = input("Enter login name: ")
  passw = input("Enter password: ")

  if login in users and users [login] == passw:
    print("\nLogin successful!\n")
  else: 
    print("\nUser doesnÂ´t exist or wrong passsword!\n")
    

while status != "q":
  displayMenu()
